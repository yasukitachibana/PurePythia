<?xml version="1.0"?>

<purePythia>

  <nEvents> 48000 </nEvents>
  <!-- <nEvents> 100 </nEvents> -->
  <pTHatMin>
    <Item>100</Item>
    <Item>110</Item>
  </pTHatMin>
  <pTHatMax>
    <Item>110</Item>
    <Item>120</Item>
  </pTHatMax>
  <hadronization>0</hadronization>

  <Pythia>
    <Item>Beams:eCM = 5020</Item>
    <!-- -->
    <Item>Beams:idA = 2212</Item>
    <Item>Beams:idB = 2212</Item>
    <Item>HardQCD:all = on</Item>
    <!-- -->
    <Item>PartonLevel:ISR = on</Item>
    <Item>PartonLevel:MPI = on</Item>
    <Item>PartonLevel:FSR = on</Item>
    <!-- -->
    <Item>PromptPhoton:all=on</Item>
    <Item>WeakSingleBoson:all=off</Item>
    <Item>WeakDoubleBoson:all=off</Item>
  </Pythia>


  <outputFiles>
    <inputStyle>JetScapeAscii</inputStyle>
    <events>
      <headHadron>JetscapeHadronListBin</headHadron>
      <headParton>JetscapePartonListBin</headParton>
      <join>_</join>
      <tail>.out</tail>
    </events>
    <sigma>
      <head>SigmaHardBin</head>
      <join>_</join>
      <tail>.out</tail>
    </sigma>
  </outputFiles>

</purePythia>
